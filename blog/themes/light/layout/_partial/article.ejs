<article class="<%= item.layout %>">
  <% if (item.photos && item.photos.length){ %>
    <%- partial('post/gallery') %>
  <% } %>
  <div class="post-content">
    <header>
        <%- partial('post/title') %>
      <% if (item.layout != 'page'){ %>
        <div style="margin-top: 10px;" >
            <time datetime="<%= item.date.toDate().toISOString() %>">发表于 <%= item.date.format(config.date_format) %></time>
        </div>
      <% } %>

    </header>
    <div class="entry">
      <% if (item.excerpt && index){ %>
        <%- item.excerpt %>
      <% } else { %>

	<!-- Table of Contents -->
	<% if (!index && !item.notoc){ %>
  		<div id="toc" class="toc-article">
  		<h1><%= __('TOC') %></h1>
  		<%- toc(item.content) %>
  		</div>
	<% } %>
	<!-- /Table of Contents -->

        <%- item.content %>
      <% } %>
    </div>
    <footer>
      <% if (index){ %>
        <% if (item.excerpt){ %>
          <div class="alignleft">
            <a href="<%- config.root %><%- item.path %>#more" class="more-link"><%= theme.excerpt_link %></a>
          </div>
        <% } %>
        <% if (item.comment && config.disqus_shortname){ %>
        <div class="alignright">
          <a href="<%- item.permalink %>#disqus_thread" class="comment-link">Comments</a>
        </div>
        <% } %>
      <% } else { %>
         <%- partial('post/category') %>
        <%- partial('post/tag') %>
        <%- partial('post/share') %>
      <% } %>
      <div class="clearfix"></div>
    </footer>
  </div>
</article>


